{
  "name": "notes-widget",
  "version": "1.0.0",
  "description": "Corporate notes widget for Windows",
  "main": "dist/main.js",
  "author": "Albert Adroer",
  "scripts": {
    "dev": "npm run build:electron && concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build:electron": "tsc src/main.ts src/preload.ts --outDir dist --module commonjs --esModuleInterop --skipLibCheck --resolveJsonModule",
    "build:react": "vite build",
    "build": "npm run build:electron && npm run build:react && electron-builder",
    "build:portable": "npm run build:electron && npm run build:react && electron-builder --win portable"
  },
  "build": {
    "appId": "com.noteswidget.app",
    "productName": "Notes Widget",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "portable": {
      "artifactName": "NotesWidget-Portable.exe"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "build/icon.ico",
        "to": "icon.ico"
      }
    ],
    "directories": {
      "output": "release"
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^39.2.2",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^7.2.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
